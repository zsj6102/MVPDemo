<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/live_play_indicator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?selectableItemBackground"
    android:gravity="center"
    android:orientation="horizontal"
    tools:ignore="Overdraw">

    <ImageView
        android:id="@+id/live_play_iv_icon"
        android:layout_width="@dimen/imageview_default_size"
        android:layout_height="@dimen/imageview_default_size"
        android:layout_gravity="center"
        android:clickable="false"
        android:padding="5dp" />

    <TextView
        android:id="@+id/live_play_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="14sp" />
</LinearLayout>